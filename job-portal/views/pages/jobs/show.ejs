<div>
  <div class="container my-2">
    <div class="card mb-3">
      <a href="https://www.codingninjas.com/"><img src="https://files.codingninjas.com/web-banner-28759.png"
          class="card-img-top" alt="poster" /></a>
      <% if(job){%>
        <div class="card-body">
          <h1 class="text-center text-success">
            <span class="text-danger">
              <%= job.job_designation %>
            </span> oppertunity
            in <%= (job.job_location).toLowerCase() !=="remote" ? job.job_location: "REMOTE" %> IND <%=
                (job.job_location).toLowerCase() !=="remote" ? "ON-SITE" : "" %> at
                <span class="text-info">
                  <%= job.company_name %>
                </span>
          </h1>
          <% if (user && user.role==="recruiter" && user.id === job.recruiterId) { %>
            <div class="actions d-flex align-items-centre">
              <span style="width: 160px"
                class="bg-warning bg-opacity-100 border border-success border p-1 border-opacity-50 rounded">
                Actively hiring
                <i class="fa-solid fa-arrow-trend-up text-dark mx-2"></i>
              </span>
              <div class="action-right mx-2 px-2 mt-1">
                <a href="/jobs/update/<%= job.id %>" class="mx-2">
                  <i class="fa-regular fa-pen-to-square" style="font-size: 20px;"></i>
                </a>
                <button type="button" class="btn btn-link p-0" data-bs-toggle="modal"
                  data-bs-target="#deleteModal-<%= job.id %>">
                  <i class="far fa-file-excel text-danger" style="font-size: 20px;"></i>
                </button>
              </div>
            </div>
            <% } %>


              <div class="container d-flex flex-column align-items-centre justify-content-start my-3">
                <h5 class="my-1">
                  <%= job.company_name %>
                </h5>
                <div>
                  <span>
                    <%= job.job_category %>
                  </span>
                  <span class="text-success">
                    <%= job.job_designation %>
                  </span>
                </div>
                <div class="d-flex flex-column align-items-centre justify-content-start p-2">
                  <span class="">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                      class="bi bi-geo-fill" viewBox="0 0 16 16">
                      <path fill-rule="evenodd"
                        d="M4 4a4 4 0 1 1 4.5 3.969V13.5a.5.5 0 0 1-1 0V7.97A4 4 0 0 1 4 3.999zm2.493 8.574a.5.5 0 0 1-.411.575c-.712.118-1.28.295-1.655.493a1.319 1.319 0 0 0-.37.265.301.301 0 0 0-.057.09V14l.002.008a.147.147 0 0 0 .016.033.617.617 0 0 0 .145.15c.165.13.435.27.813.395.751.25 1.82.414 3.024.414s2.273-.163 3.024-.414c.378-.126.648-.265.813-.395a.619.619 0 0 0 .146-.15.148.148 0 0 0 .015-.033L12 14v-.004a.301.301 0 0 0-.057-.09 1.318 1.318 0 0 0-.37-.264c-.376-.198-.943-.375-1.655-.493a.5.5 0 1 1 .164-.986c.77.127 1.452.328 1.957.594C12.5 13 13 13.4 13 14c0 .426-.26.752-.544.977-.29.228-.68.413-1.116.558-.878.293-2.059.465-3.34.465-1.281 0-2.462-.172-3.34-.465-.436-.145-.826-.33-1.116-.558C3.26 14.752 3 14.426 3 14c0-.599.5-1 .961-1.243.505-.266 1.187-.467 1.957-.594a.5.5 0 0 1 .575.411z" />
                    </svg>
                    <%= (job.job_location).toLowerCase() !=="remote" ? job.job_location: "REMOTE" %> IND <%=
                        (job.job_location).toLowerCase() !=="remote" ? "ON-SITE" : "" %>
                  </span>
                  <span class="">
                    â‚¹ <%= job.salary %>pa
                  </span>
                  <span><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                      class="bi bi-hourglass-split" viewBox="0 0 16 16">
                      <path
                        d="M2.5 15a.5.5 0 1 1 0-1h1v-1a4.5 4.5 0 0 1 2.557-4.06c.29-.139.443-.377.443-.59v-.7c0-.213-.154-.451-.443-.59A4.5 4.5 0 0 1 3.5 3V2h-1a.5.5 0 0 1 0-1h11a.5.5 0 0 1 0 1h-1v1a4.5 4.5 0 0 1-2.557 4.06c-.29.139-.443.377-.443.59v.7c0 .213.154.451.443.59A4.5 4.5 0 0 1 12.5 13v1h1a.5.5 0 0 1 0 1h-11zm2-13v1c0 .537.12 1.045.337 1.5h6.326c.216-.455.337-.963.337-1.5V2h-7zm3 6.35c0 .701-.478 1.236-1.011 1.492A3.5 3.5 0 0 0 4.5 13s.866-1.299 3-1.48V8.35zm1 0v3.17c2.134.181 3 1.48 3 1.48a3.5 3.5 0 0 0-1.989-3.158C8.978 9.586 8.5 9.052 8.5 8.351z" />
                    </svg>
                    Apply By <%= job.apply_by %>
                  </span>
                  <span><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                      class="bi bi-bar-chart-fill" viewBox="0 0 16 16">
                      <path
                        d="M1 11a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1v-3zm5-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v7a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V7zm5-5a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1V2z" />
                    </svg>
                    Number of openings <%= job.number_of_openings %></span>
                  <a style="text-decoration: none; color: rgb(215, 20, 85)" href="/jobs/<%= job.id %>/applicants">
                    <span><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-people-fill" viewBox="0 0 16 16">
                        <path
                          d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7Zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm-5.784 6A2.238 2.238 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.325 6.325 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1h4.216ZM4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5Z" />
                      </svg>
                      Applicants <%= job.applicants ? job.applicants.length : 0 %></span>
                  </a>
                </div>

                <div class="container">
                  <div class="skills p-1">

                    <%{job.skills_required.map(skill=>{%>
                      <button class="btn btn-sm btn-outline-info">
                        <%= skill %>
                      </button>
                      <%})}%>
                  </div>
                  <button data-bs-toggle="modal" data-bs-target="#applyModal" class="btn btn-md btn-primary px-5 my-2">
                    Apply Now
                  </button>
                </div>
              </div>
              <!-- job posted -->
              <small class="text-body-secondary">
                <span style="width: 160px"
                  class="bg-success text-white border border-success border border-success p-1 border-opacity-50 rounded">
                  Posted: <%= new Date(job.createdAt).toLocaleString() %>
                </span></small>
              <!-- job posted -->
        </div>

        <%}%>
    </div>
  </div>
</div>

<%- include('../../partials/apply-modal') %>
  <%- include('../../partials/deleteJobConfimModal') %>