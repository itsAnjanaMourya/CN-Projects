<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
  aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title bold" id="staticBackdropLabel">
          Experience easily!
        </h3>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <% if (typeof error !=='undefined' && error) { %>
        <p class="text-danger">
          <%= error %>
        </p>
        <% } %>
          <div class="modal-body">
            <form action="/auth/register" method="post" class="p-2">
              <div class="mb-3">
                <div class="input-group">
                  <span class="input-group-text">Name</span>
                  <input required="" name="name" type="text" aria-label="name" class="form-control"
                    placeholder="enter your name">
                </div>
              </div>

              <div class="mb-3">
                <div class="input-group">
                  <span class="input-group-text">Email</span>
                  <input required="" name="email" type="email" aria-label="email" class="form-control"
                    placeholder="enter your email">
                </div>
              </div>
              <div class="mb-3">
                <div class="input-group">
                  <span class="input-group-text">Password</span>
                  <input required="" name="password" type="password" aria-label="password" class="form-control"
                    placeholder="enter your password">
                </div>
                    <input type="hidden" name="role" value="recruiter">
              </div>

              <button type="submit" class="btn btn-md mt-2 login-button">Register</button>
            </form>
          </div>
          <div class="modal-footer d-flex align-items-centre justify-content-between">
            <div class="left d-flex flex-row align-items-centre justify-content-centre">
              <!-- Button trigger login modal -->
              <span>Already registered?</span>
              <button type="button" class="btn btn-sm px-3 mx-3 btn-outline-success" data-bs-toggle="modal"
                data-bs-target="#loginModal">
                login
              </button>
            </div>
            <div class="right">
              <a href="#" target="_blank"><i class="text-primary fa-brands fa-twitter" style="font-size: 18px;"></i></a>
              <a href="#" target="_blank"><i class="text-danger fa-brands fa-instagram"
                  style="font-size: 18px;"></i></a>
              <a href="#" target="_blank"><i class="fa-brands fa-facebook" style="font-size: 18px;"></i></a>
              <a href="#" target="_blank"><i class="text-success fa-brands fa-whatsapp"
                  style="font-size: 18px;"></i></a>
              <a href="#" target="_blank"><i class="text-primary fa-brands fa-linkedin"
                  style="font-size: 18px;"></i></a>
            </div>
          </div>
    </div>
  </div>
</div>

<%- include('../partials/login-modal') %>